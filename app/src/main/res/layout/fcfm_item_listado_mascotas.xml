<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre mascota"
        android:id="@+id/textViewNombreMascotaListado"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_margin="5dp" />

    <ImageView
        android:id="@+id/imagenMascotaListado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_margin="5dp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imagenSexoMascotaListado"
        android:scaleType="fitCenter"
        android:src="@drawable/icn_sexo_masculino_mascota"
        android:layout_margin="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Sexo mascota"
            android:id="@+id/textViewSexoListado"
            android:ellipsize="end"
            android:layout_weight="0"
            android:layout_margin="5dp"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textViewRazaListado"
            android:text="Raza mascota"
            android:ellipsize="none"
            android:gravity="center_vertical|right"
            android:layout_weight="1"
            android:layout_margin="5dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>