<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.petmate.fcfm.petmate.LoginActivity">

    <EditText
        android:id="@+id/usuario"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="@string/correoPlaceHolder" />

    <EditText
        android:id="@+id/contrasena"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:password="true"
        android:hint="@string/contrasenaPlaceHolder" />

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFF"
        android:background="@drawable/btn_con_borde"
        android:text="@string/loginBotonString"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/registrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFF"
        android:background="@drawable/btn_con_borde"
        android:text="@string/registrarBotonString" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/editTextNombreUsuarioRegistro"
        android:hint="@string/nombrePlaceholderString"
        android:visibility="gone" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/editTextCorreoUsuarioRegistro"
        android:hint="@string/correoPlaceHolder"
        android:visibility="gone" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/editTextContrasenaUsuarioRegistro"
        android:password="true"
        android:hint="@string/contrasenaPlaceHolder"
        android:visibility="gone" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/editTextTelefonoUsuarioRegistro"
        android:hint="@string/telefonoPlaceHolderString"
        android:visibility="gone" />

    <Button
        android:id="@+id/aceptarRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFF"
        android:background="@drawable/btn_con_borde"
        android:text="@string/botonAceptarString"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/cancelarRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFF"
        android:background="@drawable/btn_con_borde"
        android:text="@string/botonCancelarString"
        android:visibility="gone"
        android:layout_marginBottom="10dp"/>

</LinearLayout>
