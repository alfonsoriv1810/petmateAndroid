<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.petmate.fcfm.petmate.LoginActivity">

    <EditText
        android:id="@+id/usuario"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Correo ej:usuario@correo.com" />

    <EditText
        android:id="@+id/contrasena"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:password="true"
        android:hint="Contraseña" />

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFF"
        android:background="@drawable/btn_con_borde"
        android:text="Login"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/registrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFF"
        android:background="@drawable/btn_con_borde"
        android:text="Registrarte" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/editTextNombreUsuarioRegistro"
        android:hint="Nombre ej:Nombre"
        android:visibility="gone" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/editTextCorreoUsuarioRegistro"
        android:hint="Correo ej:correo@correo.com"
        android:visibility="gone" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/editTextContrasenaUsuarioRegistro"
        android:password="true"
        android:hint="Contraseña"
        android:visibility="gone" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/editTextTelefonoUsuarioRegistro"
        android:hint="Telefono ej:81-10-29-92"
        android:visibility="gone" />

    <Button
        android:id="@+id/aceptarRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFF"
        android:background="@drawable/btn_con_borde"
        android:text="Aceptar"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/cancelarRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFF"
        android:background="@drawable/btn_con_borde"
        android:text="Cancelar"
        android:visibility="gone"
        android:layout_marginBottom="10dp"/>

</LinearLayout>
