<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_margin="5dp">
    <TextView android:id="@+id/textViewPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:textStyle="bold"
        android:textSize="30dp"
        android:text="Perfil"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="25dp"
        android:layout_weight="1"
        android:ellipsize="end"/>
    <Button
        android:id="@+id/botonEditar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/btn_editar"
        android:layout_weight="0"
        android:layout_gravity="right"
        android:layout_margin="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imagenUsuario"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:layout_alignParentBottom="false"
            android:layout_alignParentTop="true"
            android:contentDescription="TODO"
            android:src="@drawable/icn_btn_usr_true"
            android:padding="6dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp" />
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <TextView android:id="@+id/textViewCorreoUsuario"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:textStyle="bold"
                    android:textSize="22dp"
                    android:text="Correo usuario"
                    android:textColor="#000000"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />

                <EditText
                    android:id="@+id/editTextCorreoUsuario"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:textStyle="bold"
                    android:textSize="22dp"
                    android:text="Nombre usuario"
                    android:textColor="#000000"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:visibility="gone"/>

                <TextView android:id="@+id/textViewTelefonoUsuario"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:textSize="22dp"
                    android:text="Teléfono: 8111103944"
                    android:textColor="#000000"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />

                <EditText
                    android:id="@+id/editTextTelefonoUsuario"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:textSize="22dp"
                    android:text="Teléfono: 8111103944"
                    android:textColor="#000000"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/textViewEstadoUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:textSize="22dp"
                    android:text="Estado: Nuevo, León"
                    android:textColor="#000000"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>
     </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listadoMascotasUsuario">

        </ListView>

</LinearLayout>