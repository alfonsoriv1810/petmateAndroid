<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#fff2af13">

        <TextView
            android:id="@+id/textViewNombreAppBarra"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="Petmate"
            android:textColor="#FFFF"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icn_btn_nueva_mascota_false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imagenUsuario"
            android:scaleType="fitCenter"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="false"
            android:layout_alignParentTop="true"
            android:contentDescription="TODO"
            android:src="@drawable/icn_btn_usr_true"
            android:padding="6dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textViewNombreUsuarioDetalle"
            android:text="Nombre usuario"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="15dp"
            android:textStyle="bold" />
        <ImageButton
            android:id="@+id/botonFavoritosAgregar"
            android:scaleType="fitCenter"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/icn_btn_fav_true"
            android:layout_weight="0"
            android:padding="10dp"
            android:layout_marginRight="5dp"
            android:background="#00ffffff" />
        </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textNombreMascotaDetalle"
        android:text="Nombre mascota"
        android:gravity="center_horizontal"
        android:textSize="25dp"
        android:textStyle="bold|normal" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imagenMascotaDetalle"
        android:scaleType="fitCenter"
        android:background="#FFFF"
        android:layout_weight="2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textViewRazaMascotaDetalle"
                android:text="Raza mascota"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:textSize="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textViewSexoMascotaDetalle"
                android:text="Sexo mascota"
                android:layout_weight="0"
                android:gravity="center_vertical|left"
                android:textSize="20dp" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icn_sexo_masculino_mascota"
                android:id="@+id/imageViewSexoMascotaDetalle"/>
        </LinearLayout>


</LinearLayout>