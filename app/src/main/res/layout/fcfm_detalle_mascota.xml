<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imagenUsuario"
            android:scaleType="fitCenter"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="false"
            android:layout_alignParentTop="true"
            android:contentDescription="TODO"
            android:src="@drawable/icn_btn_usr_true"
            android:padding="6dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textViewNombreUsuario"
            android:text="Nombre usuario"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="15dp"
            android:textStyle="bold" />
        <ImageButton
            android:scaleType="fitCenter"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/icn_btn_fav_true"
            android:layout_weight="0"
            android:padding="10dp"
            android:layout_marginRight="5dp"
            android:background="#00ffffff" />
        </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textNombreMascota"
        android:text="Nombre mascota"
        android:gravity="center_horizontal"
        android:textSize="25dp"
        android:textStyle="bold|normal" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imagenMascota"
        android:scaleType="fitCenter"
        android:background="#ff000000"
        android:layout_weight="2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textViewRazaMascota"
                android:text="Raza mascota"
                android:layout_weight="2"
                android:gravity="center_vertical" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textViewSexoMascota"
                android:text="Sexo mascota"
                android:layout_weight="0"
                android:gravity="center_vertical|left" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icn_sexo_masculino_mascota"/>
        </LinearLayout>


</LinearLayout>